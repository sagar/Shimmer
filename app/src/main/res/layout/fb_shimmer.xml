<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:shimmer="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <sagar.com.shimmer.others.FbShimmerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fbcontainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    shimmer:angle="cw_0"
    shimmer:base_alpha="0.5"
    shimmer:tilt="0"
    shimmer:repeat_delay="0"
    shimmer:duration="5000"
    shimmer:repeat_mode="restart"
    shimmer:auto_start="true"
    shimmer:repeat_count="-1">

    <ImageView
      android:id="@+id/image2"
      android:layout_width="300dp"
      android:layout_height="300dp"

      android:background="@color/gold"/>
  </sagar.com.shimmer.others.FbShimmerLayout>
</LinearLayout>
