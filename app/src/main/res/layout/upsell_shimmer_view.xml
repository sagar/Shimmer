<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal">

  <sagar.com.shimmer.upsell.UpsellShimmerView
    android:id="@+id/shimmer_view_flame"
    android:src="@drawable/ic_upsell_gold_flame"
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="100dp"/>

  <ImageView
    android:id="@+id/shimmer_view_text"
    android:src="@drawable/ic_upsell_tinder_text"
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="100dp"/>

  <sagar.com.shimmer.upsell.UpsellShimmerView
    android:id="@+id/shimmer_view_bar"
    android:src="@drawable/ic_upsell_gold_bar"
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="100dp"/>

</LinearLayout>
